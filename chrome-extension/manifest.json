{
  "manifest_version": 2,

  "name":        "Steam Backlog ALPHA",
  "description": "Chrome extension that helps you play and organize the always growing steam backlog of games.",
  "version":     "0.6.5",

  "options_page": "steam-backlog.html#/settings",

  "content_scripts": [
    {
      "matches": [
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*"
      ],

      "js": [
        "lib/jquery.backlog.min.js",
        "lib/nprogress.js",
        "SB.main.js",
        "modules/SB.module.ajax.js",
        "modules/SB.module.user.js"
      ],

      "css": []
    }
  ],

  "page_action": {
    "default_title": "Steam Backlog",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "steam-backlog.html",
    "/partials/*",
    "/assets/*"
  ],

  "permissions": [
    "unlimitedStorage",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "https://www.howlongtobeatsteam.com/"
  ]
}
