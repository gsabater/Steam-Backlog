{
  "manifest_version": 2,

  "name":        "Steam Backlog RC1",
  "description": "Steam Backlog provides easier and better way to browse our always growing steam libraries while helping decide what to play next.",
  "version":     "1.0.0",

  "options_page": "steam-backlog.html#/settings",

  "content_scripts": [
    {
      "matches": [
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*"
      ],

      "js": [
        "lib/jquery.backlog.min.js",
        "lib/nprogress.js",
        "SB.main.js",
        "modules/SB.module.ajax.js",
        "modules/SB.module.user.js"
      ],

      "css": []
    }
  ],

  "page_action": {
    "default_title": "Steam Backlog",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["modules/SB.module.notifications.js"]
  },

  "web_accessible_resources": [
    "steam-backlog.html",
    "/partials/*",
    "/assets/*"
  ],

  "permissions": [
    "unlimitedStorage",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "https://www.howlongtobeatsteam.com/",
    "https://steam-backlog.com/"
  ]
}
