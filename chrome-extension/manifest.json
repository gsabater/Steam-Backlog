{
  "manifest_version": 2,

  "name": "Steam Backlog",
  "description": "Lets do this",
  "version": "0.2",

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*"
      ],

      "js": [
        "lib/jquery-2.1.4.min.js",        
        
        "sb-front.js",
        "modules/sb.module.user.js",
        "modules/sb.module.games.js"

      ],

      "css": ["mv-front.css"]
    }
  ],

  "web_accessible_resources": [
    "backlog.html",
    "options.html",
    "/partials/*",
    "/assets/*"
  ],

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "notifications"
  ]
}
