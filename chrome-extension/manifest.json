{
  "manifest_version": 2,

  "name": "Steam Backlog DEV ALPHA",
  "description": "Chrome extension that helps you play and organize the always growing steam backlog of games.",
  "version": "0.6.0",

  "options_page": "sb.options.html",

  "content_scripts": [
    {
      "matches": [
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*"
      ],

      "js": [
        "lib/jquery-2.1.4.min.js",
        "lib/nprogress.js",
        "sb.front.js",
        "modules/SB.module.ajax.js",
        "modules/SB.module.user.js"
      ],

      "css": ["resources/sb.front.css"]
    }
  ],

  "page_action": {

    "default_title": "Steam Backlog",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "steam-backlog.html",
    "sb.options.html",
    "/partials/*",
    "/assets/*"
  ],

  "permissions": [
    "unlimitedStorage",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "http://www.howlongtobeatsteam.com/"
  ]
}
